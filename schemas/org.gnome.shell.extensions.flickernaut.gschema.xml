<?xml version="1.0" encoding="utf-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.flickernaut" path="/org/gnome/shell/extensions/flickernaut/">

    <!-- Settings for tracking the version of the settings to update from. -->
    <key name="settings-version" type="u">
      <summary>The version of the settings to update from.</summary>
      <default>1</default>
    </key>

    <!-- Behavior -->
    <key name="submenu" type="b">
      <summary>Group entry in submenu.</summary>
      <default>false</default>
    </key>

    <!-- Apps -->
    <key name="applications" type="as">
      <summary>List of applications.</summary>
      <description>List of applications to be shown in the menu.</description>
      <default>[ ]</default>
    </key>

    <!-- Deprecated and will be removed in the future. Use 'applications' instead. -->
    <key name="editors" type="as">
      <summary>Editor App (DEPRECATED)</summary>
      <default>[ ]</default>
    </key>
  </schema>
</schemalist>